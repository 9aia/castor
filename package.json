{
  "name": "@9aia/castor",
  "type": "module",
  "version": "0.2.1",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "CLI tool to connect, explore, and query SQL databases using JavaScript-defined blocks.",
  "author": "Luis Emidio",
  "license": "MIT",
  "homepage": "https://github.com/9aia/castor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/9aia/castor.git"
  },
  "bugs": {
    "url": "https://github.com/9aia/castor/issues"
  },
  "keywords": [
    "cli",
    "database",
    "d1",
    "cloudflare",
    "developer-tool",
    "open-source"
  ],
  "exports": {
    ".": {
      "types": "./dist/castor-sdk.d.ts",
      "import": "./dist/castor-sdk.es.js"
    }
  },
  "main": "dist/castor-cli.es.js",
  "bin": {
    "castor": "dist/castor-bin.es.js"
  },
  "files": [
    "CONTRIBUTING.md",
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "link": "pnpm build && pnpm link --global",
    "unlink": "pnpm unlink --global",
    "pack": "pnpm build && pnpm pack",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "release": "release-it"
  },
  "dependencies": {
    "drizzle-orm": "^0.43.1",
    "enquirer": "^2.4.1",
    "fast-glob": "^3.3.3",
    "tsx": "^4.19.4",
    "wrangler": "^4.14.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.1",
    "@types/node": "^22.15.11",
    "eslint": "^9.26.0",
    "release-it": "^19.0.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3"
  }
}
